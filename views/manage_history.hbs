            <label for="star2" title="text">2 stars</label>
            <input type="radio" id="star1" name="rate" value="1" />
            <label for="star1" title="text">1 star</label>
          </div> --}}
          <div class="status">
            <p style="font-style: italic; font-weight: bold">Tình trạng: <input type="text" name="order_status"
                value="{{status}}"> </p>
          </div>
        </div>
      </div>
      {{!-- <div>
        <textarea class="comment">Nhận xét của bạn:</textarea>
      </div> --}}
      <a href="/manage_history">
        <button type="submit" class="btn isBlue booking__btn ml-10 isfont20"
          style="margin: 0 0 1rem 19rem; color: white; font-weight: bold; border-radius: 10px">
          Cập nhật
        </button>
      </a>
    </form>
    {{/each}}
  </section>
</main>
<script>
  function changeChoice(e) {
    let text = e.target.textContent;
    let value = text == "Đang thực hiện " ? 0 : text == "Đã hoàn tất " ? 1 : 2;
    let count = 0;
    trips.forEach(trip => {
      trip.className = "trip";
      if (count == value) {
        trip.className = "trip-hidden";
      }
      ++count;
    });
    choices.forEach((c) => {
      c.className = "grid-choice-item";
    })
    e.target.className = "grid-choice-item-active";
  }
  var choices = document.querySelectorAll(".grid-choice button");
  choices.forEach(choice => choice.addEventListener("click", changeChoice));
  var trips = document.querySelectorAll("article.trip");

</script>