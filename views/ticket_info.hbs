<link rel="stylesheet" href="../css/ticket_info.css" />

<body>
  <div class="container body_ticket_info">
    <div class="">
      <div class="row isBGLightGrey p-3 mt-5">
        <div class="col-xl-5">
          <span class="type-bus isbold">{{ticketInfor.garageInfor.name}}</span>
        </div>
        <div class="col-xl-3 d-flex justify-content-start pt-1">
          <i class="icofont-star isfont35 isChecked"></i>
          <i class="icofont-star isfont35 isChecked"></i>
          <i class="icofont-star isfont35 isChecked"></i>
          <i class="icofont-star isfont35 isChecked"></i>
          <i class="icofont-star isfont35"></i>
        </div>
        <div class="col-xl-4 d-flex justify-content-end isfont20 mt-2">
          <a href="/partner_info">
            <p class="isbold isPurple">
              Thông tin
              <i class="icofont-arrow-right isfont25"></i>
            </p>
          </a>
        </div>
      </div>
    </div>

    <div class="">
      <div class="departure-place isbold">
        <i style="color: red">Địa điểm xuất bến:</i>
        {{ticketInfor.tripInfor.departure_place}}
      </div>
      <div class="home-car isbold">
        <i style="color: red">Nhà xe:</i>
        {{ticketInfor.garageInfor.name}}
      </div>
      <div class="car-type isbold">
        <i style="color: red">Loại xe:</i>
        {{ticketInfor.carInfor.name}}
      </div>
      <div class="car-type isbold">
        <i style="color: red">Số lượng vé còn lại:</i>
        {{ticketInfor.limit}}
      </div>
    </div>

    <div class="isBGLightGrey">
      <div class="row pt-4 pb-2">
        <div class="col-lg-4 col-md-6 col-sm-12 col-6">
          <p class="isfont25 isbold">Điểm đi</p>
          <d class="isfont20">
            <div class="row">
              <div
                class="col-xl-6"
              >{{ticketInfor.tripInfor.departure_place}}</div>

            </div>
          </d>
        </div> 
        <div class="col-lg-4 col-md-6 col-sm-12 col-6">
          <p class="isfont25 isbold border border-top-0">Điểm đến</p>
          <p class="isfont20">{{ticketInfor.tripInfor.arrive_place}}</p>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 col-12">
          <p class="isfont25 isbold">Ngày:
            {{ticketInfor.tripInfor.departure_date}}</p>
          <div class="row">
            <div class="col-4">
              <p class="isfont20 isbold">Giờ đi
                <br />
                {{ticketInfor.tripInfor.departure_time}}</p>
            </div>
            <div class="col-4">
              <p class="isfont20 isbold">Giá vé <br /> {{ticketInfor.price}}</p>
            </div>
            <div class="col-4">
              <a href="/booking?ticket={{ticketInfor._id}}">
                <button
                  type="button"
                  class="btn isOrange booking__btn ml-10 isfont20"
                  style="width: "
                >
                  Đặt vé
                </button>
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- <div class="row pl-3 pb-2">
            <div class="col-xl-4"></div>
            <div class="col-xl-4"></div>
            <div class="col-xl-1">
              <p class="isfont20">00:00</p>
            </div>
            <div class="col-xl-1">
              <p class="isfont20">300K</p>
            </div>
          </div> -->
      <div style="text-align: center; margin: 15px">
        <a href="/ticket_list">
          <button
            type="button"
            class="btn btn--similar isOrange isBond isfont23"
            style="width: 100%;padding: 10px"
          >
            CÁC CHUYẾN XE KHÁC TƯƠNG TỰ
          </button>
        </a>
      </div>
    </div>
  </div>
</body>